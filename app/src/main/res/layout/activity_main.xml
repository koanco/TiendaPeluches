<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="johannpolania.com.tiendapeluches.MainActivity"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >








    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Seleccione las siguietes opciones:"
    android:textColor="@color/colorPrimary"
    android:gravity="center"
    android:id="@+id/tMensaje"
    android:layout_gravity="center"
    />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rGrupo"



                >


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:id="@+id/rAgregar"
                android:onClick="activarGuardar"


                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultar"
                android:onClick="activarConsultar"
                android:id="@+id/rConsultar"

                />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vender"
                    android:onClick="activarVender"
                    android:id="@+id/rVender"

                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver ganancias"
                    android:id="@+id/rGanancia"
                    android:onClick="consultarGanancias"

                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver inventario"
                    android:onClick="consultarInventario"
                    android:id="@+id/rInventario"

                    />

            </RadioGroup>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rGrupo2"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:visibility="invisible"
                android:id="@+id/rActualizar"
                android:onClick="activarActualizar"
                android:gravity="center"
                android:layout_gravity="center"

                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:visibility="invisible"
                android:id="@+id/rEliminar"
                android:onClick="activarEliminacion"
                android:gravity="center"
                android:layout_gravity="center"

                />



        </RadioGroup>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/bRealizar"
            android:gravity="center"
            android:layout_gravity="center"


            />



    </LinearLayout>











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese el nombre del peluche"
            android:completionThreshold="2"
            android:singleLine="true"
            android:visibility="invisible"
            android:id="@+id/eNombre"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese cantidad"
            android:visibility="invisible"
            android:inputType="number"
            android:id="@+id/eCantidad"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Ingrese el precio"
            android:inputType="number"
            android:visibility="invisible"
            android:id="@+id/eValor"

            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="invisible"
            android:text=""
             android:id="@+id/eIdentificacion"

            />



    </LinearLayout>





</LinearLayout>

    </ScrollView>

</LinearLayout>
